<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Render Board</title>
    <link rel="stylesheet" href="/css/style.css"/>
</head>
<body>
    <div class="background">
        <h2>Write Board</h2>
        <form action="/main/board/write" method="post">
            <p><input class="login" type="text" name="title" id="title" placeholder="Index"></p>
            <p><textarea class="login" name="content" id="content" cols="30" rows="10" placeholder="content"></textarea></p>
            <p><button class="btn" type="submit" id="submitButton">Submit</button></p>
          </form>
    </div>

    <script>
        const form = document.getElementById('submitForm');
        
        form.addEventListener('submit', function(event) {
            event.preventDefault();
            
            const title = document.getElementById('title').value;
            const content = document.getElementById('content').value;
    
            const data = {
                title: title,
                content: content
            };
    
            axios({
                method: 'post',
                url: '/main/write',
                data: JSON.stringify(data),
                headers: { 'Content-Type': 'application/json' }
            })
            .then(function (response) {
                window.location.href = "/main/board";
            })
            .catch(function (error) {
                console.error('Error posting the data', error);
            });
        });
    </script>
</body>
</html>